<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxury Rentals | Rentals</title>
    <link rel="stylesheet" href="/css/rentals.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Italiana&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Antonio:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
</head>

<body>
    <div>
        <nav id="main-nav">
            <a id="lux-txt" href="/">Luxury Rentals</a>
            <div class="nav-right top-nav">
                <a href="/">Home</a>
                <a id="highlight" href="/rentals">Rentals</a>
                <a href="/contact">Contact</a>
                <a href="/login">Login</a>
                <a href="/book-now"><button class="book-now-btn nav-btn">Book Now</button></a>
            </div>
        </nav>
    </div>

    <div id="header"></div>

    <div id="locations">
        <a href="/rentals/1">
            <div class="location-box" id="charlotte">
                <footer>Charlotte</footer>
            </div>
        </a>
        <a href="/rentals/2">
            <div class="location-box" id="nyc">
                <footer>New York</footer>
            </div>
        </a>
        <a href="/rentals/3">
            <div class="location-box" id="san-francisco">
                <footer>San Francisco</footer>
            </div>
        </a>
        <a href="/rentals/4">
            <div class="location-box" id="chicago">
                <footer>Chicago</footer>
            </div>
        </a>
    </div>

    <div id="contact-and-map">
        <div id="main-box">
            <div id="left">
                <div id="featured-car">
                    {{> car-details}}
                </div>
            </div>
            <!--input featured car's card via handlebar here-->
            <div id="right">
                <div id="map">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2965.9313367241693!2d-87.91118658379509!3d41.98028396699094!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880fb4276a7762f3%3A0x511747070259ad4b!2sO%27Hare%20International%20Airport!5e0!3m2!1sen!2sus!4v1632940633152!5m2!1sen!2sus"
                        width="490" height="375" allowfullscreen="" loading="lazy"></iframe>
                </div>
            </div>
        </div>
    </div>

    <div id="container">
        <ol id="all-cars">
            {{#each cars as |car|}}
            {{> car-details}}
            {{/each}}
        </ol>
    </div>

    <footer id="bottom-footer">
        <h6>Luxury Rentals*</h6>
        <div class="nav-right bootom-nav">
            <a href="/rentals">Rentals</a>
            <a href="/contact">Contact</a>
            <a href="/login">Login</a>
        </div>
    </footer>
</body>