<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luxury Rentals | Book Now</title>
    <link rel="stylesheet" href="/css/booknow.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Italiana&display=swap" rel="stylesheet">
    <link rel="icon" type="image/png" href="/assets/favicon.png">
</head>

<body>
    <div id="container">
        <nav id="main-nav">
            <div id="logo-center">
                <a id="lux-txt" href="/">Luxury Rentals</a>
            </div>
            <div class="nav-right top-nav">
                <a href="/">Home</a>
                <a href="/rentals">Rentals</a>
                <a href="/contact">Contact</a>
                {{#if logged_in}}
                <a id="logout" href="">Logout</a>
                {{else}}
                <a href="/login">Login</a>
                {{/if}}
                <a href="/book-now"><button class="book-now-btn nav-btn">Book Now</button></a>
            </div>
        </nav>
    </div>

    <!-- CANT ACCESS THIS PAGE UNLESS LOGGED IN -->

    <article>
        <div id="main-box">
            <div id="left">
                <select class="dropdown" name="dropdown">
                    <option value="{{booking.id}}" id="location-selector">{{booking.city}}, {{booking.airport}}</option>
                </select>
                <select class="dropdown" name="dropdown">
                    <option value="{{booking.cars.[0].id}}" id="vehicle-selector">{{booking.cars.[0].make}}
                        {{booking.cars.[0].model}}</option>
                </select>

                <div class="calendar-container">
                    <div class="calendar">
                        <div class="current-date">
                            <h1>Wed 29th</h1>
                            <h1>September 2021</h1>
                        </div>
                        <div class="current-month">
                            <ul class="week-days">
                                <li>Mo</li>
                                <li>Tu</li>
                                <li>We</li>
                                <li>Th</li>
                                <li>Fr</li>
                                <li>Sa</li>
                                <li>Su</li>
                            </ul>
                            <div class="weeks">
                                <div class="first">
                                    <span class="last-month">28</span>
                                    <span class="last-month">29</span>
                                    <span class="last-month">30</span>
                                    <span class="last-month">31</span>
                                    <span>01</span>
                                    <span>02</span>
                                    <span>03</span>
                                </div>
                                <div class="second">
                                    <span>04</span>
                                    <span>05</span>
                                    <span>06</span>
                                    <span>07</span>
                                    <span>08</span>
                                    <span>09</span>
                                    <span>10</span>
                                </div>
                                <div class="third">
                                    <span>11</span>
                                    <span>12</span>
                                    <span>13</span>
                                    <span>14</span>
                                    <span>15</span>
                                    <span>16</span>
                                    <span>17</span>
                                </div>
                                <div class="fourth">
                                    <span>18</span>
                                    <span>19</span>
                                    <span>20</span>
                                    <span>21</span>
                                    <span>22</span>
                                    <span>23</span>
                                    <span>24</span>
                                </div>
                                <div class="fifth">
                                    <span>25</span>
                                    <span>26</span>
                                    <span>27</span>
                                    <span>28</span>
                                    <span class="active">29</span>
                                    <span>30</span>
                                    <span>31</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <input type="text" id="numder-days" placeholder="How many days?">
            </div>

            <div id="right">
                <div id="img-generator">
                    <img id="img-right" src="{{booking.cars.[0].image}}"
                        alt="{{booking.cars.[0].make}} {{booking.cars.[0].model}}">
                </div>
                <p id="price-generator">${{booking.cars.[0].price}} per Day</p>
                <div id="bottom-right">
                    <!-- Total $ will render based on amount of days selected -->
                    <p id="total-purchase">Total Rent Price: $500</p>
                    <a href="#"><button class="confirm-btn">Confirm</button></a>
                </div>
            </div>
        </div>
    </article>

    <footer id="bottom-footer">
        <h6>Luxury Rentals*</h6>
        <div class="nav-right bootom-nav">
            <a href="/rentals">Rentals</a>
            <a href="/contact">Contact</a>
            {{#if logged_in}}
            <a id="logout" href="">Logout</a>
            {{else}}
            <a href="/login">Login</a>
            {{/if}}
        </div>
    </footer>

    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
    <script src="/js/booknow.js"></script>
</body>